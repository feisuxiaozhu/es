{
    "settings": {
        "index": {
            "number_of_replicas": 0,
            "number_of_shards": 1
        },
        "analysis": {
            "filter": {
                "my_stopwords_filter": {
                    "type":       "stop",
                    "stopwords":  "_english_"
                }
            },
            "analyzer": {
                "my_analyzer": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": [
                        "lowercase",
                        "apostrophe",
                        "my_stopwords_filter"
                    ]
                }
            }
        },
        "similarity" : {
            "my_bm25" : {
                "type" : "BM25",
                "k1": 2.0,
                "b": 0.7
            }
        }
    },
    "mappings": {
        "document": {
            "properties": {
                "content": {
                    "type": "string",
                    "store": true,
                    "similarity": "my_bm25",
                    "analyzer": "my_analyzer"
                }
            }
        }
    }
}
